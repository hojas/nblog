{
  "name": "nblog",
  "version": "1.0.0",
  "description": "My magnificent Nuxt.js project",
  "author": "hojas",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server/index.js --watch src/server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node src/server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "nuxt": "^2.12.2",
    "cross-env": "^7.0.2",
    "koa": "^2.12.0",
    "@nuxtjs/axios": "^5.10.3",
    "@nuxtjs/dotenv": "^1.4.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "@nuxtjs/eslint-config": "^3.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.1.0",
    "eslint-plugin-nuxt": ">=1.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "stylelint": "^13.5.0",
    "@vue/test-utils": "^1.0.3",
    "babel-jest": "^26.0.1",
    "jest": "^26.0.1",
    "vue-jest": "^4.0.0-0"
  }
}
